<p id="notice"><%= notice %></p>
<% wiki = Wiki.find(params[:wiki]) %>
<h1><%= "#{wiki.title} Collaborators" %></h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% wiki.collaborators.each do |collaborator| %>
      <tr>
        <td><%= "#{User.find(collaborator.user_id).email}" %></td>
        <td><%= link_to 'Destroy', collaborator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to "Add collaborator", { :controller => "collaborators", :action => "new", :wiki_id => wiki.id } %>